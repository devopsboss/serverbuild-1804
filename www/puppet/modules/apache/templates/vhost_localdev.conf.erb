<VirtualHost *:80>
  ServerName <%= @domain %>
  <%= @server_alias %>

  ## Vhost docroot
  DocumentRoot "<%= @vhost_webroot %>"

  ## Directories, there should at least be a declaration for /var/www/serverbuild-1804

  <Directory "<%= @vhost_webroot %>">
    # Options Indexes FollowSymlinks
    # removed "Indexes" so the directory listings can NOT be seen
    Options FollowSymlinks
    AllowOverride All
    Require all granted

    <%= @directory_index %>
    #DirectoryIndex index.html index.php
  </Directory>

  # proxy fcgi module config for php-fpm
  #<LocationMatch "^(.*\.php)$">
  #  ProxyPass fcgi://127.0.0.1:9000<%= @vhost_webroot %>
  #</LocationMatch>

#  <IfModule proxy_module>
#    ProxyPassMatch ^/(.*\.php(/.*)?)$ fcgi://127.0.0.1:9000<%= @vhost_webroot %>/$1
#  </IfModule>

  <FilesMatch \.php$>
    SetHandler "proxy:fcgi://127.0.0.1:9000"
  </FilesMatch>

  ## Logging
  ErrorLog "<%= @apache_error_log %>"
  ServerSignature Off
  CustomLog "<%= @apache_access_log %>" combined

  ## SetEnv/SetEnvIf for environment variables
  SetEnv APP_ENV dev
  SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1

  ## Custom fragment
#Redirect permanent / https://<%= @domain %>/


  <%= @proxy_pass %>
  <%= @proxy_pass_reverse %>

</VirtualHost>
